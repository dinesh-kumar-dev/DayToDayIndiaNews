<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/newsimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/paperd" />
        </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/newstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Here Title"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/newsdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Here Description"
            android:textSize="20dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Here date"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/newstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Show Here time"
                android:textSize="20dp" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
        <EditText
            android:id="@+id/white_comment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="white omment..." />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/sendcomment"
        android:tint="#4FD554"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_send_black_24dp"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebookimage"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:padding="10dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/massengerimage"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:padding="10dp"
                android:src="@drawable/massenger" />

            <ImageView
                android:id="@+id/twiterimage"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:padding="10dp"
                android:src="@drawable/twiter" />

            <ImageView
                android:id="@+id/whatsappimage"
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:padding="10dp"
                android:src="@drawable/whtaspp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>